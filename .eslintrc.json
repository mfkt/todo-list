{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "standard",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "legacyDecorators": true,
      "jsx": true
    },
    "ecmaVersion": "latest"
  },
  "plugins": ["prettier", "react", "@typescript-eslint"],
  "rules": {
    "react/jsx-handler-names": 0,
    "react/no-unused-prop-types": 0,
    "import/exports": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "jsxBracketSameLine": false,
        "parser": "typescript",
        "printWidth": 80,
        "jsxSingleQuote": true
      }
    ]
  }
}
